<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <!-- Default cache template -->
    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap unit="entries">200</heap>
    </cache-template>

    <!-- Products cache -->
    <cache alias="ehcache:products" uses-template="default">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap unit="entries">500</heap>
    </cache>

    <!-- Users cache -->
    <cache alias="ehcache:users" uses-template="default">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache>

    <!-- Products by category cache -->
    <cache alias="ehcache:productsByCategory" uses-template="default">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <heap unit="entries">100</heap>
    </cache>
</config>
